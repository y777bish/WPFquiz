        <TextBox HorizontalAlignment="Left" Margin="549,273,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text=""/>
        <TextBox HorizontalAlignment="Left" Margin="249,162,0,0" TextWrapping="Wrap" Text="180" VerticalAlignment="Top" Width="120"/>
        <ComboBox HorizontalAlignment="Left" Margin="78,158,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Czas testu (sekundy):" HorizontalAlignment="Left" Margin="249,131,0,0" VerticalAlignment="Top"/>
        <Label Content="Wybierz test:" HorizontalAlignment="Left" Margin="78,131,0,0" VerticalAlignment="Top"/>
        <Label Content="Pytanie:" HorizontalAlignment="Left" Margin="493,123,0,0" VerticalAlignment="Top"/>
