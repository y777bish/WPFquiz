        <Button Content="Dodaj" HorizontalAlignment="Left" Margin="549,328,0,0" VerticalAlignment="Top"/>
        <Button Content="Usuń" HorizontalAlignment="Left" Margin="638,328,0,0" VerticalAlignment="Top"/>
        <ListBox d:ItemsSource="{d:SampleData ItemCount=5}" Margin="43,200,380,25"/>

    </Grid>
</Window>
